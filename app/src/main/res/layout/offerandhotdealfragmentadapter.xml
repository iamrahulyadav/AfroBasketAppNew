<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="225dp"
    android:layout_marginRight="2dp"
android:background="@color/bg_grey"
    android:layout_height="wrap_content">
   <!-- <View
        android:layout_width="2dp"
        android:background="@color/bg_grey"
        android:layout_toRightOf="@+id/rel1"
        android:layout_height="match_parent"></View>-->
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_products"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/offer"
            android:layout_alignParentRight="true"
            android:background="@drawable/offer_image"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_products"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"

            android:layout_height="30dp"
            android:text="add"
            android:visibility="visible"
            android:orientation="vertical"

            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button_selected"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_products"
            android:padding="3dp"
            android:layout_marginTop="5dp">

               <Button
                android:id="@+id/button_minus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="-"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_minus"
                />
            <TextView
                android:id="@+id/txt_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/button_minus"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignBaseline="@+id/button_minus"/>

            <Button
                android:id="@+id/button_pluse"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="+"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_plus"
               />
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 % off"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/txt_offers"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_offers"
android:id="@+id/linearLayout2"
            android:gravity="center"

            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"

            android:textSize="13sp"
android:layout_marginLeft="5dp"
            android:id="@+id/txt_p_name"
           />


        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txt_offprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 250"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 350"

                android:textSize="12sp"
               android:layout_marginLeft="15dp"
                />

       </LinearLayout>

        <FrameLayout
            android:layout_width="170dp"
            android:background="@drawable/ic_spinner"
            android:layout_margin="10dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinner"

                ></Spinner>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
