<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_grey"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_marginBottom="8dp"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
card_view:cardCornerRadius="8dp"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/heading_grey"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                  android:layout_alignParentLeft="true"
                    android:text="Hot Deal"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/heading_grey"/>
                <TextView
android:id="@+id/hotdeal_viewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textStyle="bold"

                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:text="View all" />

            </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_deal_recycler_view"


        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"

        card_view:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/heading_grey"
    android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"

                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:text="New Arrival" />
    <TextView
        android:id="@+id/offer_viewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textStyle="bold"

        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="View all" />

</RelativeLayout>

            <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"  android:id="@+id/offer_recycler_view"

        android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView


android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
android:layout_marginTop="8dp"
        android:elevation="8dp"
android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/heading_grey"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="New Offers"
                    android:background="@color/heading_grey"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:textSize="11dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:text="View all" />

            </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:id="@+id/newarrival_recycler_view"
        android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>
</LinearLayout>