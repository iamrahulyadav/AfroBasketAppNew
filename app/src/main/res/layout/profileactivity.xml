<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_add"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:id="@+id/heading_name"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:text="PROFILE"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/heading_name"
        android:id="@+id/frame"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:id="@+id/image_layout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/doc_image_edit"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/hannibal"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/doc_image_edit"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rel1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Sample"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"

                        />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="namesample@gmail.com"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:background="@null" />
                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="7676668703"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:background="@null" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/edit_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_edit"
                    android:layout_toRightOf="@+id/rel1"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_gravity="center"
                android:layout_below="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ic_location"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/location_icon"
                        android:text="XYZ Street 23/14 New Colony\n Delhi 102301"
                        android:layout_marginLeft="5dp"
                        android:singleLine="false"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_toLeftOf="@+id/button"
                        android:layout_gravity="center_horizontal"
                        />

                    <Button
                        android:id="@+id/button_ads"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_alignTop="@+id/location_icon"

                        android:layout_marginRight="5dp"
                       android:layout_alignParentRight="true"
                        android:background="@drawable/round_button_selected"
                        android:text="CHANGE"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_below="@+id/frame"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_notifications"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/notification_icon"
                    android:text="Notifications"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/bg_grey"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/change_password"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_password_gray"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/password_icon"
                    android:text="Change Password"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/bg_grey"
                android:layout_height="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/logout"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_exit"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logout_icon"
                    android:text="Logout"
                    android:textStyle="bold"
android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/bg_grey"
                android:layout_height="1dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
